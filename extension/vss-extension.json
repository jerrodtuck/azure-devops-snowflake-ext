{
  "manifestVersion": 1,
  "id": "snowflake-dropdown-react",
  "publisher": "jerrodtuck",
  "version": "2.0.6",
  "name": "Snowflake Dropdown",
  "description": "Base implementation of a searchable dropdown that loads data from Snowflake. You will need to review the README.md file for instructions on how to use the extension.",
  "public": true,
  "repository": {
    "type": "git",
    "uri": "https://github.com/jerrodtuck/azure-devops-snowflake-ext"
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "categories": ["Azure Boards"],
  "icons": {
    "default": "images/sf.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "contributions": [
    {
      "id": "snowflake-dropdown-control",
      "type": "ms.vss-work-web.work-item-form-control",
      "description": "A searchable dropdown that loads data from Snowflake",
      "targets": ["ms.vss-work-web.work-item-form"],
      "properties": {
        "name": "Snowflake Dropdown",
        "uri": "dist/snowflake-dropdown.html",
        "height": 600,
        "inputs": [
          {
            "id": "FieldName",
            "name": "Field Name",
            "description": "The work item field to bind the selected value",
            "type": "WorkItemField",
            "properties": {
              "workItemFieldTypes": ["String"]
            },
            "validation": {
              "dataType": "String",
              "isRequired": true
            }
          },
          {
            "id": "ApiUrl",
            "name": "API URL",
            "description": "The base URL for your Snowflake API (e.g., https://api.example.com)",
            "type": "String",
            "validation": {
              "dataType": "String",
              "isRequired": true
            }
          },
          {
            "id": "DataType",
            "name": "Data Type",
            "description": "Type of data to search (cc for Cost Centers, wbs for WBS Elements)",
            "type": "String",
            "validation": {
              "dataType": "String",
              "pattern": "^(cc|wbs)$"
            }
          },
          {
            "id": "MinSearchLength",
            "name": "Minimum Search Length",
            "description": "Minimum characters before search starts (default: 2)",
            "type": "Number",
            "validation": {
              "dataType": "Number",
              "minValue": 1,
              "maxValue": 5
            }
          },
          {
            "id": "DebounceDelay",
            "name": "Debounce Delay (ms)",
            "description": "Milliseconds to wait before searching (default: 300)",
            "type": "Number",
            "validation": {
              "dataType": "Number",
              "minValue": 100,
              "maxValue": 1000
            }
          }
        ]
      }
    }
  ],
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "images",
      "addressable": true
    }
  ],
  "scopes": [
    "vso.work",
    "vso.work_write"
  ]
}